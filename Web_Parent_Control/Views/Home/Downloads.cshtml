@using Web_Parent_Control.Controllers

@model ViewModel

<div style="margin-bottom: 20px;">
    <label style="color : blue; font-weight: bolder; font-size: 30px; ">Добро пожаловать, @(Model.Username)!</label>
</div>
<div style="min-height: 550px;">
<section id="content" role="main">
    <div class="clearfix">
        <div class="widget">
            <div style="font-size:14px; position: relative; min-height: 400px; padding: 10px 20px;">
                <div class="scroll-table">
                    <table style="border-collapse: collapse;  border-spacing: 0;">
                        <thead>
                            <tr>
                                <th class="col00"><center>Date</center></th>
                                <th class="col11"><center>File</center></th>
                                <th class="col22"><center></center></th>
                            </tr>
                        </thead>
                    </table>
                    <div class="scroll-table-body">
                        <table style="border-collapse: collapse;  border-spacing: 0;">
                            <tbody class="dataTable">

                                @foreach (var file in Model.Data)
                                {
                                        <tr>
                                            <td class="col0"><center>@file.Date</center></td>
                                            <td class="col1"><center><label>@file.Content</label></center></td>
                                            <td class="col2">
                                                <center>
                                                    @if (file.Blocked == false)
                                                    {
                                                        <input class="btn-false" type="button" value="Блокировать сайт" title=@file.Site>
                                                    }
                                                    else
                                                    {
                                                        <input class="btn-true" type="button" value="Разблокировать сайт" title=@file.Site>
                                                    }
                                                </center>
                                            </td>
                                        </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="sidebar" class="clearfix" role="complementary">
    <aside class="widget clearfix">
            <div style="font-size:14px; position: relative; min-height: 400px; padding: 10px 20px; justify-content: center; ">
        @using (Html.BeginForm("GetNewData", "Home", FormMethod.Post))
        {
                <div>
                    <center>
                    @Html.RadioButton("period", "day", true)
                        <span>за день</span> <br>
                    @Html.RadioButton("period", "week")
                        <span>за неделю</span> <br>
                    @Html.RadioButton("period", "month")
                        <span>за месяц</span><br>
                    </center>
                    @Html.Hidden("action", "Downloads")
                </div>
                <center>
                        <input class="btn-tr" type="submit" value="Применить фильтр" style="background: green ;  border: 1px solid black;  border-radius: 5px;" />
                </center>
        } <br><br>
        @using (Html.BeginForm("History", "Home", FormMethod.Get))
        {
                    <center><input class="btn-tr" type="submit" value="Журнал" style="background: green ;  border: 1px solid black;  border-radius: 5px;" /></center>

        }<br>
        @using (Html.BeginForm("Downloads", "Home", FormMethod.Get))
        {
                    <center><input class="btn-tr" type="submit" value="Загрузки" style="background: green ;  border: 1px solid black;  border-radius: 5px;" /></center>
        }<br>
        @using (Html.BeginForm("Logout", "Home", FormMethod.Get))
        {
                    <center><input class="btn-tr" type="submit" value="Выход" style="background: green ;  border: 1px solid black;  border-radius: 5px;" /></center>
        }<br>
        </div>
    </aside>
</section>
</div>





